/* 公共按钮 */
.user-set-btn{
	width: 100%;
	margin: 20rpx 0;
	background: #FFE933!important;
	border: 0!important;
	color: #333333!important;
}
.user-set-btn-disable{
	background: #F4F4F4!important;
	border: 1rpx solid #EEEEEE!important;
	color: #909090!important;
}
.body{
	padding: 0 20rpx!important;
}
.common-input{
	font-size: 30rpx;
	border-bottom: 1rpx solid #F4F4F4;
}
.user-setting-logout-btn{
    position: fixed;
    bottom: 100rpx;
    left: 20rpx;
    right: 20rpx;
    background: #009687;
}
.user-setting-userinfo-list{
    padding: 20rpx;
    border-bottom: #F4F4F4;
}
.user-setting-userinfo-list>view:first-child{
    font-size: 32rpx;
    font-weight: bold;
    color: #9B9B9B;
}
.user-setting-userinfo-list>view:last-child>view{
    margin-left: 20rpx;
    color: #9B9B9B;
}
.user-setting-userinfo-list>view:last-child view{
    margin-left: 20rpx;
    color: #9B9B9B;
}
.user-setting-userinfo-list>view:last-child>image{
    height: 80rpx;
    width: 80rpx;
    border-radius: 100%;
}
.user-setting-userinfo-list>view:last-child>input{
   text-align: right;
}

