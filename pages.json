{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"app-plus":{
                    "scrollIndicator":"none",//隐藏滚动条
                    "bounce":"vertical",
                    "titleNView":{
                        //搜索框配置
                        "searchInput":{
                            "align":"center",//位置
                            "backgroundColor":"#F7F7F7",
                            "borderRadius":"4px",//圆角半径
                            "placeholder":"(=ﾟωﾟ)=",//提示文字
                            "disabled":true//是否允许输入
                        },
                        "buttons":[
                            //左边 签到
                            {
                                "color":"#FFFFFF",
                                "colorPressed":"#BBBBBB",
                                "float":"left",
                                "fontSize":"24px",
                                "fontSrc":"/static/font/icon.ttf",
                                "text":"\ue609"
                                
                            },
                            //右边 编辑
                            {
                                "color":"#FFFFFF",
                                "colorPressed":"#BBBBBB",
                                "float":"right",
                                "fontSize":"24px",
                                "fontSrc":"/static/font/icon.ttf",
                                "text":"\ue653"
                                
                            }
                        ]
                    }
                }
			}
		}
	    ,{
            "path" : "pages/me/me",
            "style" : {
                "navigationBarTitleText":"我的"
            }
        }
        ,{
            "path" : "pages/paper/paper",
            "style" : {
                "enablePullDownRefresh":true,
                "navigationBarTitleText":"消息",
                "app-plus":{
                    "titleNView":{
                        "buttons":[
                            //左边 
                            {
                                "color":"#FFFFFF",
                                "colorPressed":"#BBBBBB",
                                "float":"left",
                                "fontSize":"24px",
                                "fontSrc":"/static/font/icon.ttf",
                                "text":"\ue845"
                                
                            },
                            //右边 
                            {
                                "color":"#FFFFFF",
                                "colorPressed":"#BBBBBB",
                                "float":"right",
                                "fontSize":"24px",
                                "fontSrc":"/static/font/icon.ttf",
                                "text":"\ue684"
                                
                            }
                        ]
                    }
                }
            }
        }
        ,{
            "path" : "pages/news/news",
            "style" : {
                "navigationBarTitleText":"动态",
                "app-plus":{
                    "titleNView":false,
                    "bounce":"vertical"
                }
            }
        }
       
        ,{
            "path" : "pages/search/search",
            "style": {
                "enablePullDownRefresh":true,
            	"app-plus":{                
                    "scrollIndicator":"none",//隐藏滚动条
                    "titleNView":{
                        //搜索框配置
                        "autoBackButton":false,
                        "searchInput":{
                            "align":"left",//位置
                            "backgroundColor":"#F7F7F7",
                            "borderRadius":"4px",//圆角半径
                            "placeholder":"(=ﾟωﾟ)=",//提示文字
                            "disabled":false//是否禁用输入
                        }
                       
                    }
                }
            }
        }
        ,{
            "path" : "pages/addINput/addINput",
            "style" : {
                "app-plus":{
                    "scrollIndicator":"none",//隐藏滚动条
                     "titleNView":false//禁用原生导航  
                }
            }
        }

        ,{
            "path" : "pages/topic-nav/topic-nav",
            "style" : {
                "navigationBarTitleText":"话题分类",
                
                "app-plus":{
                    "bounce":"vertical"
                    
                }
            }
        }
        ,{
            "path" : "pages/topic-detail/topic-detail",
            "style" : {
                "navigationBarTitleText":"话题详情",
                "enablePullDownRefresh":true,
                "app-plus":{
                    "scrollIndicator":"none",
                    "titleNView":{
                        "type":"transparent",//渐变
                        //每个按钮都是button数组里的一个对象
                        "buttons":[
                            {
                                "type":"menu"//按钮样式的按钮
                            }

                        ]
                    }
                }
            }
        }
        ,{
            "path" : "pages/user-list/user-list",
            "style" : {
                "navigationBarTitleText":"我的好友",                
                "app-plus":{
                    "animationType":"slide-in-left",
                    "scrollIndicator":"none",//隐藏滚动条
                    "titleNView":{
                        //搜索框配置
                        "autoBackButton":false,
                        "searchInput":{
                            "align":"left",//位置
                            "backgroundColor":"#F7F7F7",
                            "borderRadius":"4px",//圆角半径
                            "placeholder":"(=ﾟωﾟ)=",//提示文字
                            "disabled":false//是否禁用输入
                        }
                       
                    }
                }
                
            }
        }
        ,{
            "path" : "pages/user-chat/user-chat",
            "style" : {
                "navigationBarTitleText":"聊天页面",
                "app-plus":{
                    "titleNView":{
                        "buttons":[ //标题栏按钮样式                           
                            
                            //右边 
                            {
                                "color":"#FFFFFF",
                                "colorPressed":"#BBBBBB",
                                "float":"right",
                                "fontSize":"24px",
                                "fontSrc":"/static/font/icon.ttf",
                                "text":"\ue628"
                                
                            }
                            
                        ]
                    }
                }
            }
        }
        ,{
            "path" : "pages/detail/detail",
            "style" : {
                "navigationBarTitleText":"内容页",
                "app-plus":{
                    "scrollIndicator":"none",
                    "titleNView":{
                        "buttons":[
                            {
                                "type":"menu"
                            }
                        ]
                    }
                }
            }
        }
    ],
	"globalStyle": {
		// "navigationBarTextStyle": "light",
        "transparentTitle":"none",
		"navigationBarTitleText": "demo",
		"navigationBarBackgroundColor": "#009687",
		"backgroundColor": "#F8F8F8"
	},
